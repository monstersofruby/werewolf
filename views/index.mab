div :id => 'links' do
  @links.each do |link|
    div :class => 'link' do
      p { a link.title, :href => "/links/#{link.id}" }
      p link.description
      p :id=>"votes_#{link.id}" do
        "total votes: #{link.votes}"
      end 
      p { a "vote my ball dude!", :onclick=>"new Request.HTML({url:'/links/#{link.id}/votes', update:'votes_#{link.id}'}).post()" }
    end
  end
end