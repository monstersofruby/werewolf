div :id => 'links' do
  @links.each do |link|
    div :class => 'link' do
      h3 do
        a :href => "/links/#{link.id}" do
          link.title
        end
      end
      
      h5 do
        a "Vote!", :href => "/votes/#{link.id}" 
        text " Total votes: #{link.votes}"
      end
      p link.description
    end
  end
end