#!/usr/bin/env ruby

html do
  head do
    title "Werewolf"
    meta {"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
    stylesheet_link_tag 'screen'
  end

  body do
    div.content do
      h1 'Fear us!'
      p "team.name == 'werewolfs' ? 'hey!' : 'pringaos'"
      self << content_for_layout
    end
  end
end